<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Platforms>x64</Platforms>
    <PlatformTarget>x64</PlatformTarget>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>..\..\bin\net8.0\</OutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Shaders\VertexPositionColor.frag" />
    <None Remove="Shaders\VertexPositionColor.vert" />
    <None Remove="Shaders\VertexPositionColorTexture.frag" />
    <None Remove="Shaders\VertexPositionColorTexture.vert" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Shaders\VertexPositionColor.frag" />
    <EmbeddedResource Include="Shaders\VertexPositionColor.vert" />
    <EmbeddedResource Include="Shaders\VertexPositionColorTexture.frag" />
    <EmbeddedResource Include="Shaders\VertexPositionColorTexture.vert" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Sayers.SDL2.Core" Version="1.0.11" />
    <PackageReference Include="WaveEngine.Bindings.OpenGL" Version="1.0.4998" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.5" />
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="2.1.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\ext\RmlUI.Net\RmlUI.Net.csproj" />
    <ProjectReference Include="..\..\MagicHat.Core\MagicHat.Core.csproj" />
  </ItemGroup>

</Project>