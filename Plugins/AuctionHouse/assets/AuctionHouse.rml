<rml>
	<head>
    <title>Auction House</title>
		<link type="text/template" href="../../Core.UI/assets/templates/tabpanel.rml" />
		<style>
      * {
        box-sizing: border-box;
      }
      body {
        position: relative;
        display: flex;
        max-width: 70vw;
        width: 100%;
        font-family: Tahoma;
        font-size: 0.7em;
        font-weight: bold;
      }

      .inner {
        padding: 0;
        background-color: #000000dd;
      }

      body h4 {
        font-size: 1.1rem;
        color: #eea300dd;
        margin: 0;
        font-weight: bold;
      }

      .auction-listings {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        width: 100%;
      }

      .auction-listings-list {
        overflow: auto;
        max-height: 100%;
      }
      
      .auction-listings-table {
        position: relative;
        padding: 1rem;
      }

      .auction-listings-header {
        margin-bottom: 1rem;
      }

      .auction-listings-header-item {
        border: 1px rgba(59, 49, 27, 90%);
        border-radius: 0.2rem;
        padding: 0.5rem;
      }

      .auction-listings-list-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .auction-listings-item {
        padding: 0.5rem;
        border-radius: 0.85rem;
        background:rgba(59, 49, 27, 50%);
        margin-bottom: 0.5rem;
        text-align: center;
      }

      .auction-listings-header-item-container {
        display: flex;
        align-items: center;
        justify-content: space-around;
      }

      .auction-listings-header-item-container img {
        width: 1rem;
        height: 1rem;
      }

      .auction-listings-item td {
        vertical-align: middle;
      }

      .auction-listings-item-name-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .auction-listings-item-name {
        margin: auto;
      }

      .auction-listings-item-icon {
        display: inline-block;
        decorator: image(dat://0x06000F6E);
        width: 2rem;
        height: 2rem;
      }

      .auction-listings-title, .post-form-title {
        width: 100%;
        background-color: #000000dd;
        padding: 0.2rem;
        font-size: 1rem;
        font-weight: bold;
        border: 1px #eea300dd;
        border-radius: 0.2rem;
        text-align: center;
      }

      .post-auction-error {
        bottom: 0.3rem;
        right: 0.3rem;
        padding: 1rem;
        text-align: center;
        position: absolute;
        font-size: 1.2rem;
        color: red;
      }

      .auction-post {
        display: flex;
        flex-direction: row;
      }

      .post-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        width: 30%;
        border-right: 1px #eea300dd;
      }

      .post-form-container {
        display: flex;
        gap: 1rem;
        flex-direction: column;
      }

      .post-form-item-container {
        display: flex;
        flex-direction: column;
        border-radius: 0.85rem;
        background:rgba(59, 49, 27, 50%);
        gap: 0.5rem;
      }

      .post-form-item {
        display: flex;
        height: 2.5rem;
        gap: 0.5rem;
      }

      .icon-stack-label {
        align-self: center;
        font-size: 1.25rem;
      }

      .post-form input[type="text"] {
        width: 5rem;
        align-self: center;
      }

      .icon-stack {
        decorator: image(dat://0x06000F6E);
        width: 2.5rem;
        position: relative;
      }

      .icon-stack > * {
        position: absolute;
        top: 0;
        left: 0;
        width: 2.5rem;
        height: 2.5rem;
      }

      .icon-stack .icon-drag-invalid {
        decorator: image(dat://0x060011F8);
        display: none;
      }

      .icon-stack .icon-drag-accept {
        decorator: image(dat://0x060011F9);
        display: none;
      }

      .has-drag-over .icon-stack .icon-drag-accept {
        display: inline-block;
      }

      .has-drag-over-invalid .icon-stack .icon-drag-invalid {
        display: inline-block;
      }

     .icon-stack .icon-item {
        display: none;
      }

     .has-item .icon-stack .icon-item {
        display: inline-block;
      }
      
      .name {
        flex: 1;
        font-size: 16px;
        padding-left: 8dp;
      }

      .create-auction-button {
        width: 100%;
      }

      .auction-browse {
        display: flex;
        flex-direction: column;
        text-align: left;
        padding: 1rem;
        padding-right: 2rem;
        margin: 0;
        overflow-y: auto;
      }

      .browse-header {
        margin-bottom: 1rem;
        font-size: 1rem;
      }

      .browse-header h1 {
        color: #eea300dd;
        margin-bottom: 0.5rem;
      }

      .browse-header p {
        color: #ddd;
      }

      .browse-search input {
        width: 100%;
      }
      
    </style>
    <script src="browse.lua"></script>
    <script src="post.lua"></script>
	</head>
	<body class="window" template="tabpanel">
    <div class="inner">
      <tabset>
        <tab>Post</tab>
        <panel>
          <div id="post" />
        </panel>
        <tab>Browse</tab>
        <panel>
          <div id="browse">
          </div>
        </panel>
	   </tabset>
    </div>
	</body>
</rml>