<html>
  <head>
    <style>
      body {
        font-family: Tahoma;
        font-size: 15px;
        color: #fff;
        display: block;
        background: black;
        width: 800dp;
        height: 600dp;
        z-index: -5000;
      }

      div.wrap {
        padding: 5dp;
        display: block;
        max-width: 400px;
        margin: auto;
      }

      .formline {
        margin-top: 10px;
        height: 30px;
      }

      label {
        padding-top: 4px;
        float: left;
      }

      input[type="text"], input[type="password"] {
        decorator: ninepatch(input-bg, input-bg-inner);
        font-effect: shadow(1px 1px black);
        color: #f3be5d;
        width: 280dp;
        padding: 6px;
        float: right;
      }

      .actions {
        margin-top: 20px;
        text-align: center;
      }

      .actions button {
          padding: 14px 18px;
          font-size: 22px;
          font-weight: bold;
          display: inline-block;
      }
    </style>
    <script src="simple.lua"></script>
  </head>
  <body class="window">
    <div id="content" />
  </body>
</html>
